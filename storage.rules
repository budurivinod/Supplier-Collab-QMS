rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Match any file path for documents associated with a PO
    match /documents/{poId}/{allPaths=**} {
      
      // Allow read access to any authenticated user.
      // For production, you would restrict this to users associated with the PO.
      allow read: if request.auth != null;
      
      // Allow write (create, update, delete) only if the user is authenticated.
      // This prevents anonymous uploads.
      allow write: if request.auth != null;
    }
  }
}